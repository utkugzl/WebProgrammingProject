@model WebProgramlamaProje.Models.PlaneInfo

@{
    ViewData["Title"] = "Edit";
    //Layout = "~/Views/Shared/_AdminPageLayout.cshtml";
}

<h1>Uçak Düzenle</h1>

<h4>PlaneInfo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PlaneID" />
            <div class="form-group">
                <label asp-for="PlaneName" class="control-label"></label>
                <input asp-for="PlaneName" class="form-control" />
                <span asp-validation-for="PlaneName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeatCapacity" class="control-label"></label>
                <input asp-for="SeatCapacity" class="form-control" />
                <span asp-validation-for="SeatCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="background-color: green" type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <br />
        <div class="action-buttons">
            <a href="@Url.Action("Index", "PlaneInfo")">Uçak Listesi</a>
        </div>
        <div class="action-buttons">
            <a href="@Url.Action("Index", "Admin")" class="action-buttons" style="background-color:black ; color:red">Dashboard'a Dön</a>
        </div>
    </div>
</div>

<style>
    /* Form Container */
    .row {
        margin: 20px; /* Dilerseniz boşluğu artırabilir veya azaltabilirsiniz */
    }

    /* Form Elementleri */
    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        padding: 10px 15px;
        border: none;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .action-buttons a {
        display: inline-block;
        padding: 8px 12px;
        margin-top: 10px;
        margin-right: 5px;
        margin-bottom: 5px;
        text-decoration: none;
        background-color: #007bff;
        color: #fff;
        border-radius: 4px;
        transition: background-color 0.3s;
    }

        .action-buttons a:hover {
            background-color: #0056b3;
        }
</style>



