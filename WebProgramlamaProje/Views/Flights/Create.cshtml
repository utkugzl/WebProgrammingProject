@model WebProgramlamaProje.Models.Flight

@{
    ViewData["Title"] = "Create";
    //Layout = "~/Views/Shared/_AdminPageLayout.cshtml";
}

<h1>Create</h1>

<h4>Flight</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FlightFrom" class="control-label"></label>
                <input asp-for="FlightFrom" class="form-control" />
                <span asp-validation-for="FlightFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlightTo" class="control-label"></label>
                <input asp-for="FlightTo" class="form-control" />
                <span asp-validation-for="FlightTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlightDate" class="control-label"></label>
                <input asp-for="FlightDate" class="form-control" />
                <span asp-validation-for="FlightDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlightTime" class="control-label"></label>
                <input type="time" asp-for="FlightTime" class="form-control" />
                <span asp-validation-for="FlightTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlaneID" class="control-label"></label>
                <select asp-for="PlaneID" class ="form-control" asp-items="ViewBag.PlaneID"></select>
            </div>
            <div class="form-group">
                <label asp-for="PlaneSeat" class="control-label"></label>
                <input asp-for="PlaneSeat" class="form-control" />
                <span asp-validation-for="PlaneSeat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlightTicketPrice" class="control-label"></label>
                <input asp-for="FlightTicketPrice" class="form-control" />
                <span asp-validation-for="FlightTicketPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlightPlaneType" class="control-label"></label>
                <input asp-for="FlightPlaneType" class="form-control" />
                <span asp-validation-for="FlightPlaneType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="background-color: green" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <br />
        <div class="action-buttons">
            <a href="@Url.Action("Index", "Flights")">Uçuş Listesi</a>
        </div>
        <div class="action-buttons">
            <a href="@Url.Action("Index", "Admin")" class="action-buttons" style="background-color:black ; color:red">Dashboard'a Dön</a>
        </div>
    </div>
</div>

<style>
    .row {
        margin: 20px; /* Dilerseniz boşluğu artırabilir veya azaltabilirsiniz */
    }

    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        padding: 10px 15px;
        border: none;
        cursor: pointer;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .action-buttons a {
        display: inline-block;
        padding: 8px 12px;
        margin-right: 5px;
        margin-bottom: 5px;
        text-decoration: none;
        background-color: #007bff;
        color: #fff;
        border-radius: 4px;
        transition: background-color 0.3s;
    }

    .action-buttons a:hover {
        background-color: #0056b3;
    }
</style>

