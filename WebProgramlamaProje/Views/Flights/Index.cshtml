@model IEnumerable<WebProgramlamaProje.Models.Flight>

@{
    ViewData["Title"] = "Index";
    //Layout = "~/Views/Shared/_AdminPageLayout.cshtml";
}

<p class="action-buttons">
    <a style="background-color:black ; color:red" href="@Url.Action("Index", "Admin")" class="action-buttons">Dashboard'a Dön</a>
    <a asp-action="Create" style="background-color: green">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FlightFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plane)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlaneSeat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightTicketPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightPlaneType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FlightFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlightTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlightDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlightTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plane.PlaneName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaneSeat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlightTicketPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlightPlaneType)
            </td>
                <td class="action-buttons">
                <a asp-action="Edit" asp-route-id="@item.FlightID">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.FlightID">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.FlightID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    table, th, td {
        border: 1px solid #ddd;
    }

    th, td {
        padding: 12px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    .action-buttons a {
        display: inline-block;
        padding: 8px 12px;
        margin-right: 5px;
        margin-bottom: 5px;
        text-decoration: none;
        background-color: #007bff;
        color: #fff;
        border-radius: 4px;
        transition: background-color 0.3s;
    }

    .action-buttons a:hover {
        background-color: #0056b3;
    }
</style>
