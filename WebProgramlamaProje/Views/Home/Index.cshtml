@model WebProgramlamaProje.Models.Flight
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomePageLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div id="content">
                <h1>Uçak Bileti, Sadece Bir Tık Uzağında!</h1>
            </div>
        </div>
    </div>
</div>

<div class="container" id="second">

    <ul class="nav nav-tabs">
        <li class="active"><a class="tabshead" data-toggle="tab" href="#home"><i class="fas fa-plane"></i> Uçuşlar</a></li>
        <li><a class="tabshead" data-toggle="tab" href="#menu1"><i class="far fa-address-book"></i> Biletlerim</a></li>
        
    </ul>

    <div class="tab-content">
        
        <div id="home" class="tab-pane fade in active">
            <h3 class="lab">Uçuşlar</h3>
            <form action="Home/Search" method="POST">
                <select name="cityFrom" class="drop" id="ori">
                    <option disabled selected value="">Nereden</option>
                    @foreach (var item in ViewBag.dcity)
                    {
                        <option>@item</option>
                    }
                </select>
                <i class="fas fa-exchange-alt"></i>
                <select name="cityTo" class="drop" id="dest">
                    <option disabled selected value="">Nereye</option>
                    @foreach (var item in ViewBag.acity)
                    {
                        <option>@item</option>
                    }
                </select>
                <br />              
                 <span class="lab">Tarih</span> 
                <br />
                <input type="date" name="flightDate" class="drop" id="depart">
               
                <input type="submit" name="submit" value="Uçuş Ara" id="flightsButton">
            </form>
        </div>

        <div id="menu1" class="tab-pane fade">
            <h3 class="lab2">Biletlerim</h3>
            <form action="Home/SearchTicket" method="POST">
                <input type="text" name="ticketNo" placeholder="Bilet Numarası" class="drop2">
                <input type="submit" name="submit" id="tickButton">
            </form>
        </div>

    </div>
</div>
<br />

