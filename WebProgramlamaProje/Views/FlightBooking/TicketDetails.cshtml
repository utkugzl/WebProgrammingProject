@model WebProgramlamaProje.Models.FlightBooking

<h2>Ticket Details</h2>

<div>
    <p>Customer Name: @Model.CustomerName</p>
    <p>Customer Email: @Model.CustomerEmail</p>
    <p>Customer Seats: @Model.CustomerSeats</p>
    <p>Customer Phone Number: @Model.CustomerPhoneNumber</p>
    <p>Customer TC: @Model.CustomerTC</p>

    <h3>Flight Information</h3>
    <p>Flight ID: @Model.FlightId</p>
    @if (Model.Flight != null)
    {
        <p>From: @Model.Flight.FlightFrom</p>
        <p>To: @Model.Flight.FlightTo</p>
        <!-- Diğer uçuş bilgilerini görüntüleme, eğer varsa -->
    }
    else
    {
        <p>No Flight Information Available</p>
    }

    <h3>Ticket Information</h3>
    
        <p>Ticket Number: @Model.TicketNumber</p>
        <!-- Diğer bilet bilgilerini görüntüleme, eğer varsa -->
  
</div>

