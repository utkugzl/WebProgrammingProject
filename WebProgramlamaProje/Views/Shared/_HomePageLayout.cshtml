<!DOCTYPE html>
<html lang="en">

<head>
    <title>SAU Airways</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Pacifico|Paytone+One" rel="stylesheet">
    <!-- Add your custom CSS files -->
    <link href="~/css/homepage.css" rel="stylesheet" />
    <link href="~/css/home3.css" rel="stylesheet" />
    <link href="~/css/home2.css" rel="stylesheet" />
</head>

<body>
    <!-- NavBar -->
    <nav class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <a href="#" class="navbar-brand"><i class="fa fa-plane"></i> SAU Airways</a>
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li ><a href="@Url.Action("Index", "Home")"><strong>@_localization.GetKey("home").Value</strong></a></li>
                    <li><a href="@Url.Action("Index", "About")"><strong>@_localization.GetKey("about").Value</strong></a></li>
                    @if (Context.Session.GetString("UserId") is not null)
                    {
                        <li><a href="@Url.Action("Index", "MyTickets")"><strong>@_localization.GetKey("myTickets").Value</strong></a></li>
                    }
                    
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            @_localization.GetKey("language").Value <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="@Url.Action("ChangeLanguage", "Home", new { culture = "en-US" })" class="dropdown-item">
                                    <i class="flag-icon flag-icon-gb"></i> English
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("ChangeLanguage", "Home", new { culture = "tr-TR" })" class="dropdown-item">
                                    <i class="flag-icon flag-icon-tr"></i> Türkçe
                                </a>
                            </li>
                        </ul>
                    </li>

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Context.Session.GetString("UserId") is null)
                    {
                        <li><a href="@Url.Action("Create", "Register")"><strong>@_localization.GetKey("signup").Value </strong><i class="fas fa-user-plus"></i></a></li>
                        <li><a href="@Url.Action("Login", "Login")"><strong>@_localization.GetKey("signin").Value </strong><i class="fas fa-user"></i></a></li>
                    }
                    else
                    {
                        <li style="color :white ; margin-top: 20px"><strong>@Context.Session.GetString("UserName")</strong></li>
                        <li></li>
                        <li></li>
                        <li ><a href="@Url.Action("PLogout", "Login")"><strong>@_localization.GetKey("logout").Value</strong></a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <!-- NavBar End -->

    <div>
        @RenderBody()
    </div>
</body>

</html>
