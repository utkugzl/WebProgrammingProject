
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomePageLayout.cshtml";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <title>Flight Ticket Information</title>
</head>
<body>
    <div class="ticket-container">
        @foreach(var item in ViewBag.Tickets)
        {
        <table>
            <tr>
                <th colspan="2">Yolcu Bilgileri</th>
            </tr>
            <tr>
                <td>Adı :</td>
                <td>@item.CustomerName</td>
            </tr>
            <tr>
                <td>Email :</td>
                    <td>@item.CustomerEmail</td>
            </tr>
            <tr>
                <td>Koltuk :</td>
                    <td>@item.CustomerSeats</td>
            </tr>
            <tr>
                <td>Telefon Numarası :</td>
                    <td>@item.CustomerPhoneNumber</td>
            </tr>
            <tr>
                <td>TC :</td>
                    <td>@item.CustomerTC</td>
            </tr>
            <tr>
                <th colspan="2">Uçuş Bilgileri</th>
            </tr>
            <tr>
                <td>Nereden :</td>
                <td>
                        @if (@item.Flight != null)
                    {
                            @item.Flight.FlightFrom

                    }
                </td>
            </tr>
            <tr>
                <td>Nereye :</td>
                <td>
                        @if (@item.Flight != null)
                    {
                            @item.Flight.FlightTo
                    }
                </td>
            </tr>
            <tr>
                <th colspan="2">Bilet Bilgileri</th>
            </tr>
            <tr>
                <td>Bilet Numarası:</td>
                    <td>@item.TicketNumber</td>
            </tr>
                <br />
        </table>
        }
    </div>
</body>


<style>
    h1 {
        text-align: center;
    }

    body {
        font-family: 'Arial', sans-serif;
        background-color: #222;
        color: #fff;
        margin: 0;
        padding: 0;
    }

    .ticket-container {
        max-width: 600px;
        margin: 50px auto;
        background-color: #333;
        padding: 20px;
        border-radius: 10px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

    th, td {
        border: 1px solid #555;
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #444;
        color: #fff;
    }

    tr:nth-child(even) {
        background-color: #555;
    }

    tr:hover {
        background-color: #777;
    }
</style>
